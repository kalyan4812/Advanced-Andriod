<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ALARAM_MANAGER.Alaram">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="SELECT THE TIME  "
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/time"
        android:layout_margin="40sp"
        ></TextView>
    <Button
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_access_alarm_black_24dp"
        android:layout_marginTop="40sp"
        android:layout_marginRight="30dp"
        android:onClick="timepick"
        ></Button>
    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="start"
            android:textColor="@color/colorAccent"
            android:text="SET ALARAM"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP ALARAM"
         android:onClick="stopalaram"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="20dp"
        ></Button>

</LinearLayout>